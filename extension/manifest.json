{
  "manifest_version": 2,
  "name": "Claudezilla",
  "version": "0.4.8",
  "description": "Firefox browser automation for Claude Code",
  "author": "Chris Lyons <support@boot.industries>",

  "browser_specific_settings": {
    "gecko": {
      "id": "claudezilla@boot.industries",
      "strict_min_version": "91.0"
    }
  },

  "permissions": [
    "nativeMessaging",
    "tabs",
    "activeTab",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabGroups"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/claudezilla-16.png",
      "32": "icons/claudezilla-32.png",
      "48": "icons/claudezilla-48.png",
      "64": "icons/claudezilla-64.png"
    },
    "default_title": "Claudezilla",
    "default_popup": "popup/popup.html"
  },

  "icons": {
    "16": "icons/claudezilla-16.png",
    "32": "icons/claudezilla-32.png",
    "48": "icons/claudezilla-48.png",
    "64": "icons/claudezilla-64.png",
    "96": "icons/claudezilla-96.png",
    "128": "icons/claudezilla-128.png"
  }
}
